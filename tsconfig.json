{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es6",
    "lib": [
      "esnext"
    ],
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@repositories/*": ["src/repositories/*"],
      "@utils/*": ["src/utils/*"],
      "@datastore/*": ["src/datastore/*"],
      "@handlers/*": ["src/handlers/*"]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
