{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es6",
    "lib": [
      "esnext"
    ],
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@datastore/*": ["src/datastore/*"],
      "@handlers/*": ["src/handlers/*"],
      "@models/*": ["src/models/*"],
      "@errors/*": ["src/errors/*"],
      "@helpers/*": ["src/helpers/*"],
      "@validators/*": ["src/validators/*"]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "esModuleInterop": true
}
